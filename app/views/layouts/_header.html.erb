<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="row">
      <div class="col col-md-3">
        <% if @school %>
            <%= link_to "#{@school.name}", school_view_path(@school.slug), id: "logo" %>
        <% else %>
            <%= link_to "Bài giảng E-learning", root_path, id: "logo" %>
        <% end %>
      </div>
      <div class="col col-md-9">
        <nav>
          <%= form_tag lessons_path, method: 'get', class: "nav navbar-nav navbar-left navbar-form", role: "search" do %>
              <div class="input-group">
                <%= text_field_tag :search, nil, class: "form-control", placeholder: "Tìm kiếm" %>
                <div class="input-group-btn">
                  <%= button_tag '<i class="glyphicon glyphicon-search"></i></button>'.html_safe, class: "btn btn-default" %>
                </div>
              </div>
          <% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!-- <li><%= link_to "Trang chủ", root_path %></li> -->

            <!-- Drop down menu of schools -->
            <% Grade.all.each do |grade| %>
                <li class="dropdown">
                  <a href="#" data-toggle="dropdown" class="dropdown-toggle"> <%= grade.name %></a>
                  <% if @phongdaotao %>
                      <% schools = grade.schools.where('pdt_id = ? OR grade_id = 5', @phongdaotao.id) %>
                  <% else %>
                      <% schools = grade.schools %>
                  <% end %>
                  <% if schools.any? %>
                      <ul class="dropdown-menu" id="menu1">
                        <% schools.each do |school| %>
                            <%= link_to school.name, school_view_path(school.slug) %>
                        <% end %>
                      </ul>
                  <% end %>
                </li>
            <% end %>

            <% if logged_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Hộp thư", inbox_path %></li>
                    <li><%= link_to "Tài liệu tải về", list_of_downloads_path(username: current_user.username) %></li>
                    <li><%= link_to "Tài liệu tải lên", current_user %></li>
                    <li><%= link_to "Duyệt bài giảng", approve_path %></li>
                    <% if is_manager?(current_user) %>
                        <li><%= link_to "Upload tài liệu", controller: "lessons", action: "new" %></li>
                    <% end %>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Đăng xuất", logout_path, method: "delete" %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <li><%= link_to "Đăng nhập", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>