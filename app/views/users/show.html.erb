<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.lessons.any? %>
        <h3>Lessons (<%= @user.lessons.count %>)</h3>
        <div class="row">
          <%= render partial:'lessons/lesson', locals: {lessons: @lessons} %>
        </div>
    <% end %>
  </div>
</div>