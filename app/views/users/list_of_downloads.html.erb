<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-9">
    <% if @lessons.any? %>
        <h3>Bài giảng đã tải về (<%= @lessons.count %>)</h3>
        <div id="lessons-content">
          <%= render partial: 'lessons/lesson', locals: {lessons: @lessons} %>
        </div>
    <% end %>
  </div>
</div>