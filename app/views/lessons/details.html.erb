<div class="row">
  <div class="col-md-5">
    <%= link_to image_tag(@lesson.represent_image.url(:thumb)), {controller: :lessons, action: 'show', id: @lesson.id} %>
  </div>
  <div class="col-md-5">
    <span> Người gửi: <%= @lesson.user.name %> </span> </br>
    <span> Ngay gui: <%= @lesson.created_at.strftime("%Y-%m-%d") %> </span> </br>
    <span> Lượt xem: <%= @lesson.impressionist_count(:filter => :session_hash) %> </span>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="widget-area no-padding blank">
      <div class="status-upload">
        <form>
          <textarea maxlength="200" placeholder="Bình luận.."></textarea>

          <button type="submit" class="btn btn-success green"></i>Comment</button>
        </form>
      </div>
      <!-- Status Upload  -->
    </div>
    <!-- Widget Area -->
  </div>

</div>
<div class="row">
  <div class="col-md-6">
    <div class="page-header">
      <span id="comments">
        <small class="pull-right">45 comments</small>
        <b>Comments</b>
      </span>
    </div>
    <div class="comments-list">
      <div class="media">
        <p class="pull-right">
          <small>5 days ago</small>
        </p>
        <div class="media-body">

          <h4 class="media-heading user_name">Baltej Singh</h4>
          Wow! this is really great.
        </div>
      </div>
    </div>
  </div>

</div>