<% provide(:title, "Đăng nhập") %>
<h1><font color="blue"> Đăng nhập</font></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label "Tên đăng nhập" %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label "Mật khẩu" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label "Ghi nhớ", class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Ghi nhớ</span>
        <% end %>

        <%= f.submit "Đăng nhập", class: "btn btn-primary" %>
    <% end %>

    <p>Chưa có tài khoản? <%= link_to "Đăng ký ngay!", signup_path %></p>
  </div>
</div>